@page
@using Newtonsoft.Json;
@using System.Data;
@using ApiClient.ComfortHealthApiClient;
@model ComfortHealthCare.Presentation.Pages.DoctorModel
@{
    ApiClient apiCall = new ApiClient("", new HttpClient());
    var jsonString = await apiCall.GetdoctorbynumberAsync(10, (new CancellationTokenSource()).Token);
    // DataTable dt = (DataTable)JsonConvert.DeserializeObject(jsonString.Result.ToString(), (typeof(DataTable)));

    /*using model 9/12/2023*/
    Model.Doctors = JsonConvert.DeserializeObject<List<DoctorCommand>>(jsonString.Result.ToString());
}

<div class="body-class">
    <!-- Doctor Information List HTML -->
    <div class="container">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2>Manage <b>Doctor Informations</b></h2>
                    </div>
                    <div class="col-sm-6">
                        <a href="#addDoctorModal" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Add New</span></a>
                        <a href="#deleteDoctorModal" class="btn btn-danger" data-toggle="modal"><i class="material-icons">&#xE15C;</i> <span>Delete</span></a>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            <span class="custom-checkbox">
                                <input type="checkbox" id="selectAll">
                                <label for="selectAll"></label>
                            </span>
                        </th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Identity</th>
                        <th>Phone Contact</th>
                        <th>Specility</th>
                        <th>Others</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>


                    @foreach (var item in Model.Doctors)
                    {
                        <tr>
                            <td>
                                <span class="custom-checkbox">
                                    <input type="checkbox" id="checkbox1" name="options[]" value="1">
                                    <label for="checkbox1"></label>
                                </span>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DoctorName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DoctorIdentity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Specility)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Others)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Contact)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DoctorEmail)
                            </td>
                            <td>
                                <a href="#editDoctorModal" class="edit" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
                                <a href="#deleteDoctorModal" class="delete" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
            <div class="clearfix">
                <div class="hint-text">Showing <b>5</b> out of <b>25</b> entries</div>
                <ul class="pagination">
                    <li class="page-item disabled"><a href="#">Previous</a></li>
                    <li class="page-item"><a href="#" class="page-link">1</a></li>
                    <li class="page-item"><a href="#" class="page-link">2</a></li>
                    <li class="page-item active"><a href="#" class="page-link">3</a></li>
                    <li class="page-item"><a href="#" class="page-link">4</a></li>
                    <li class="page-item"><a href="#" class="page-link">5</a></li>
                    <li class="page-item"><a href="#" class="page-link">Next</a></li>
                </ul>
            </div>
        </div>
    </div>
    <!-- Create Modal HTML -->
    <div id="addDoctorModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="post">
                    <div class="modal-header">
                        <h4 class="modal-title">Doctor Registration</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Doctor.DoctorName" class="control-label"></label>
                            <input asp-for="Doctor.DoctorName" class="form-control" />
                            <span asp-validation-for="Doctor.DoctorName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Doctor.DoctorIdentity" class="control-label"></label>
                            <input asp-for="Doctor.DoctorIdentity" class="form-control" />
                            <span asp-validation-for="Doctor.DoctorIdentity" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Doctor.Specility" class="control-label"></label>
                            <input asp-for="Doctor.Specility" class="form-control" />
                            <span asp-validation-for="Doctor.Specility" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Doctor.Others" class="control-label"></label>
                            <input asp-for="Doctor.Others" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Doctor.Password" class="control-label"></label>
                            <input asp-for="Doctor.Password" type="password" class="form-control" />
                            <span asp-validation-for="Doctor.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Doctor.Contact" class="control-label"></label>
                            <input asp-for="Doctor.Contact" class="form-control" />
                            <span asp-validation-for="Doctor.Contact" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Doctor.DoctorEmail" class="control-label"></label>
                            <input asp-for="Doctor.DoctorEmail" type="email" class="form-control" />
                            <span asp-validation-for="Doctor.DoctorEmail" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                        <input type="submit" class="btn btn-success" value="Register">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Edit Modal HTML -->
<div id="editDoctorModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h4 class="modal-title">Add Employee</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Phone Contact</label>
                        <input type="text" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Identity</label>
                        <input type="text" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Specility</label>
                        <input type="text" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Others</label>
                        <textarea class="form-control" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                    <input type="submit" class="btn btn-success" value="Save">
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Delete Modal HTML -->
<div id="deleteDoctorModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h4 class="modal-title">Delete Employee</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete these Records?</p>
                    <p class="text-warning"><small>This action cannot be undone.</small></p>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                    <input type="submit" class="btn btn-danger" value="Delete">
                </div>
            </form>
        </div>
    </div>
</div>
</div>
<script src="~/js/main.js"></script>
<link rel="stylesheet" href="./css/main.css" />
