    $(document).ready(function () {
        $('.edit').on('click', function () {
            console.log('Edit button clicked');

            var id = $(this).data('id');
            console.log('ID:', id);

            var name = $(this).data('name');
            console.log('Name:', name);

            var identity = $(this).data('identity');
            console.log('Identity:', identity);

            var specility = $(this).data('specility');
            console.log('Specility:', specility);

            var others = $(this).data('others');
            console.log('Others:', others);

            var contact = $(this).data('contact');
            console.log('Contact:', contact);

            var email = $(this).data('email');
            console.log('Email:', email);

            $('#editDoctorModal input[name="Doctor.Id"]').val(id);
            console.log('Set ID input value');

            $('#editDoctorModal input[name="Doctor.DoctorName"]').val(name);
            console.log('Set Name input value');

            $('#editDoctorModal input[name="Doctor.DoctorIdentity"]').val(identity);
            console.log('Set Identity input value');

            $('#editDoctorModal input[name="Doctor.Specility"]').val(specility);
            console.log('Set Specility input value');

            $('#editDoctorModal input[name="Doctor.Others"]').val(others);
            console.log('Set Others input value');

            $('#editDoctorModal input[name="Doctor.Contact"]').val(contact);
            console.log('Set Contact input value');

            $('#editDoctorModal input[name="Doctor.DoctorEmail"]').val(email);
            console.log('Set Email input value');
        });
    });
</script>
<script src="~/js/main.js"></script>
<link rel="stylesheet" href="./css/main.css" />

