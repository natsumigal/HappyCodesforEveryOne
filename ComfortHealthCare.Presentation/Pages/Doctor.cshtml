@page
@using Newtonsoft.Json;
@using System.Data;
@using ApiClient.ComfortHealthApiClient;
@model ComfortHealthCare.Presentation.Pages.DoctorModel
@{
    ViewData["Title"] = "Manage Doctor Informations";
}

<div class="body-class">
    <!-- Doctor Information List HTML -->
    <div class="container">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2>Manage <b>Doctor Informations</b></h2>
                    </div>
                    <div class="col-sm-6">
                        <a href="#addDoctorModal" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Add New</span></a>
                        <a href="#deleteDoctorModal" class="btn btn-danger" data-toggle="modal"><i class="material-icons">&#xE15C;</i> <span>Delete</span></a>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            <span class="custom-checkbox">
                                <input type="checkbox" id="selectAll">
                                <label for="selectAll"></label>
                            </span>
                        </th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Identity</th>
                        <th>Phone Contact</th>
                        <th>Specility</th>
                        <th>Others</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Doctors)
                    {
                        <tr>
                            <td>
                                <span class="custom-checkbox">
                                    <input type="checkbox" id="checkbox1" name="options[]" value="1">
                                    <label for="checkbox1"></label>
                                </span>
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.DoctorName)</td>
                            <td>@Html.DisplayFor(modelItem => item.DoctorIdentity)</td>
                            <td>@Html.DisplayFor(modelItem => item.Specility)</td>
                            <td>@Html.DisplayFor(modelItem => item.Others)</td>
                            <td>@Html.DisplayFor(modelItem => item.Contact)</td>
                            <td>@Html.DisplayFor(modelItem => item.DoctorEmail)</td>
                            <td>
                                <a href="#editDoctorModal" class="edit" data-toggle="modal"
                                   data-id="@item.Id"
                                   data-name="@item.DoctorName"
                                   data-identity="@item.DoctorIdentity"
                                   data-specility="@item.Specility"
                                   data-others="@item.Others"
                                   data-contact="@item.Contact"
                                   data-email="@item.DoctorEmail">
                                    <i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i>
                                </a>
                                <a href="#deleteDoctorModal" class="delete" data-toggle="modal" data-id="@item.Id"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="clearfix">
                <div class="hint-text">Showing <b>@Model.Doctors.Count</b> out of <b>@Model.TotalPages * 10</b> entries</div>
                <ul class="pagination">
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-page="./Doctor" asp-route-pageNumber="@(Model.CurrentPage - 1)">Previous</a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                            <a class="page-link" asp-page="./Doctor" asp-route-pageNumber="@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-page="./Doctor" asp-route-pageNumber="@(Model.CurrentPage + 1)">Next</a>
                    </li>
                </ul>
            </div>

        </div>
    </div>

    <!-- Create Modal HTML -->
    <div id="addDoctorModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="post" asp-page-handler="CreateDoctor">
                    <div class="modal-header">
                        <h4 class="modal-title">Doctor Registration</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Doctor.DoctorName" class="control-label"></label>
                            <input asp-for="Doctor.DoctorName" class="form-control" />
                            <span asp-validation-for="Doctor.DoctorName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Doctor.DoctorIdentity" class="control-label"></label>
                            <input asp-for="Doctor.DoctorIdentity" class="form-control" />
                            <span asp-validation-for="Doctor.DoctorIdentity" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Doctor.Specility" class="control-label"></label>
                            <input asp-for="Doctor.Specility" class="form-control" />
                            <span asp-validation-for="Doctor.Specility" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Doctor.Others" class="control-label"></label>
                            <input asp-for="Doctor.Others" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Doctor.Password" class="control-label"></label>
                            <input asp-for="Doctor.Password" type="password" class="form-control" />
                            <span asp-validation-for="Doctor.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Doctor.Contact" class="control-label"></label>
                            <input asp-for="Doctor.Contact" class="form-control" />
                            <span asp-validation-for="Doctor.Contact" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Doctor.DoctorEmail" class="control-label"></label>
                            <input asp-for="Doctor.DoctorEmail" type="email" class="form-control" />
                            <span asp-validation-for="Doctor.DoctorEmail" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                        <input type="submit" class="btn btn-success" value="Register">
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Modal HTML -->
    <div id="editDoctorModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="post" asp-page-handler="UpdateDoctor">
                    <div class="modal-header">
                        <h4 class="modal-title">Edit Doctor</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" asp-for="Doctor.Id" />
                        <div class="form-group">
                            <label asp-for="Doctor.DoctorName" class="control-label"></label>
                            <input asp-for="Doctor.DoctorName" class="form-control" />
                            <span asp-validation-for="Doctor.DoctorName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Doctor.DoctorIdentity" class="control-label"></label>
                            <input asp-for="Doctor.DoctorIdentity" class="form-control" />
                            <span asp-validation-for="Doctor.DoctorIdentity" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Doctor.Specility" class="control-label"></label>
                            <input asp-for="Doctor.Specility" class="form-control" />
                            <span asp-validation-for="Doctor.Specility" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Doctor.Others" class="control-label"></label>
                            <input asp-for="Doctor.Others" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Doctor.Contact" class="control-label"></label>
                            <input asp-for="Doctor.Contact" class="form-control" />
                            <span asp-validation-for="Doctor.Contact" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Doctor.DoctorEmail" class="control-label"></label>
                            <input asp-for="Doctor.DoctorEmail" type="email" class="form-control" />
                            <span asp-validation-for="Doctor.DoctorEmail" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                        <input type="submit" class="btn btn-success" value="Save">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
